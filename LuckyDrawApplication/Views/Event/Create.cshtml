@model LuckyDrawApplication.Models.EventView

@{
    ViewBag.Title = "Create New Event";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />

<!-- Site wrapper -->
<div class="wrapper">

    @Html.Partial("_AdminLayout")

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1 style="margin-top: 20px;">Create New Event</h1>
            <ol class="breadcrumb">
                <li><a href="~/Admin/Index"><i class="fa fa-dashboard"></i>Dashboard</a></li>
                <li><a href="~/Event/Index"></i>Events List</a></li>
                <li class="active">Events List</li>
            </ol>

        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="box box-primary">

                <h4 style="margin-bottom: 30px; font-weight:bold; text-align:center">Create New Event</h4>

                <div class="box-body">

                    <div class="container-fluid">

                        <div class="callout callout-warning">
                            <h4 style="margin-bottom:20px;">Attention! Prevent data corruption by following these steps!</h4>
                            <p><h4>Staff Prize Data File </h4></p>
                            <p><h5>Eg. <a target="_blank" href="https://drive.google.com/file/d/1DkeFd4jr2e3lyJgz5R5ly30LXRO_lteu/view?usp=sharing">Download Sample</a></h5></p>

                            <ol>
                                <li>First column: Order Number, Second column: Prize Amount</li>
                                <li>The file must only contain 1 sheet with 2 columns.</li>
                                <li>The file saved MUST BE IN CSV FORMAT. Please refer to the sample link above.</li>
                            </ol>

                        </div>


                        @using (Html.BeginForm("Create", "Event", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group">
                                    @Html.LabelFor(model => model.EventCode, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.EventCode, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.EventCode, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.EventPassword, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.EventPassword, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.EventPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.EventLocation, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.EventLocation, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.EventLocation, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.StaffPrizeData, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        <input type="file" class="custom-file-input" id="StaffPrizeData" name="StaffPrizeData">
                                        @Html.ValidationMessageFor(model => model.StaffPrizeData, "", new { @class = "text-danger" })
                                    </div>
                                </div>


                                <div class="form-actions no-color pull-right">
                                    <a href="~/Event/Index" class="btn btn-primary">Back</a>
                                    <input type="submit" value="Create" class="btn btn-success" />
                                </div>
                            </div>

                        }
                    </div>
                </div>

            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    @Html.Partial("_Footer")

</div>

<script src="~/admin-lte/js/adminlte.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


<!-- #endregion -->
<script>
$(document).ready(function () {
    $('#events').addClass("active");
});</script>
