@model IEnumerable<LuckyDrawApplication.Models.EventView>

@{
    ViewBag.Title = "Events List";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<!-- Site wrapper -->
<div class="wrapper">

    @Html.Partial("_AdminLayout")

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1 style="margin: 20px 20px 10px 20px">Events List</h1>
            <ol class="breadcrumb">
                <li><a href="~/Admin/Index"><i class="fa fa-dashboard"></i>Dashboard</a></li>
                <li class="active">Events List</li>
            </ol>

        </section>

        <!-- Main content -->
        <section class="content">

            <div style="text-align:right">
                <p style="text-align: right;padding:5px;margin-bottom: 10px;margin-left:20px;">
                    <a href="/Event/Create" class="btn btn-success">Create New Event</a>
                </p>
            </div>

            <!-- Default box -->
            <div class="box box-primary">

                <h4 style="margin-top: 30px; font-weight:bold; text-align:center">Events List</h4>

                <div class="box-body">

                    <div class="container-fluid">

                        <div class="row">

                            <table id="eventsTable" class="table table-striped table-bordered">

                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EventID)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EventCode)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EventLocation)
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EventID)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EventCode)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EventLocation)
                                            </td>
                                            <td>
                                                <a href='@Url.Action("Edit", "Event", new { id = item.EventID })' class="btn btn-xs btn-warning">Modify</a>
                                                <a href='@Url.Action("Delete", "Event", new { id = item.EventID })' class="btn btn-xs btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>

                    </div>

                </div>
            </div>

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    @Html.Partial("_Footer")

</div>

<script src="~/admin-lte/js/adminlte.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>


<!-- #endregion -->
<script>$(document).ready(function () {
        $('#events').addClass("active");
        var table = $('#eventsTable').DataTable({
            responsive: true
        });
    });</script>
