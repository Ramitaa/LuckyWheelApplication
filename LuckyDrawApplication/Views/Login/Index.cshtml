@model LuckyDrawApplication.Models.Event

    @{
        ViewBag.Title = "Login";
    }

    <style>
        body {
            background-color: gainsboro;
        }
    </style>

    <link rel="stylesheet" href="~/admin-lte/css/AdminLTE.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <div class="login-box">
        <div class="login-logo">
            <b>LuckyWheel</b><small>Agent</small>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body" style="padding-bottom:40px;">
            <p class="login-box-msg">Sign in to start your session</p>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <!-- <p>@ViewBag.Hash</p>

                    <p>@ViewBag.Salt</p>-->


                <div style="text-align: center; color: #a94442" ;>
                    @ViewBag.ErrorMessage
                </div>

                <div class="form-group has-feedback" style="margin-top:20px;">
                    @Html.EditorFor(model => model.EventCode, new { htmlAttributes = new { @class = "form-control", @placeholder = "Event Code" } })
                    <span class="glyphicon glyphicon-tag form-control-feedback"></span>
                    @Html.ValidationMessageFor(model => model.EventCode, "", new { @class = "text-danger" })
                </div>

                <div class="form-group has-feedback">
                    @Html.EditorFor(model => model.EventPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    @Html.ValidationMessageFor(model => model.EventPassword, "", new { @class = "text-danger" })
                </div>


                <div class="row">
                    <div class="col-xs-8">
                        <a style="vertical-align: -webkit-baseline-middle;" href="@Url.Action("AdminIndex", "Login")">I'm an Admin</a>

                    </div>

                    <div class="col-xs-4">
                        <button type="submit" id="Index" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>



            }

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->

    <script src="~/admin-lte/js/adminlte.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>