@model IEnumerable<LuckyDrawApplication.Models.ProjectView>

@{
    ViewBag.Title = "Projects List";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<!-- Site wrapper -->
<div class="wrapper">

    @Html.Partial("_AdminLayout")

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1 style="margin: 20px 20px 10px 20px;">Projects List</h1>
            <ol class="breadcrumb">
                <li><a href="~/Admin/Index"><i class="fa fa-dashboard"></i>Dashboard</a></li>
                <li class="active">Projects List</li>
            </ol>

        </section>

        <!-- Main content -->
        <section class="content">

            <div style="text-align:right">
                <p style="text-align: right;padding:5px;margin-bottom: 10px;margin-left:20px;">
                    <a href="/Project/Create" class="btn btn-success">Create New Project</a>
                </p>
            </div>

            <!-- Default box -->
            <div class="box box-primary">

                <h4 style="margin-top: 30px; font-weight:bold; text-align:center">Projects List</h4>

                <div class="box-body">

                    <div class="container-fluid">

                        <div class="row">

                            <table id="projectsTable" class="table table-striped table-bordered">

                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ProjectID)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ProjectName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.NoOfProject)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PrizeCategory)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EventName)
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ProjectID)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ProjectName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NoOfProject)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PrizeCategory)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EventName)
                                            </td>
                                            <td>
                                                <a href='@Url.Action("Edit", "Project", new { id = item.ProjectID })' class="btn btn-xs btn-info">Modify</a>
                                                <a href='@Url.Action("Delete", "Project", new { id = item.ProjectID })' class="btn btn-xs btn-warning">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>

                    </div>

                </div>
            </div>

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    @Html.Partial("_Footer")

</div>

<script src="~/admin-lte/js/adminlte.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>


<!-- #endregion -->
<script>
$(document).ready(function () {
    $('#projects').addClass("active");
        var table = $('#projectsTable').DataTable({
            responsive: true
    });
});
</script>

