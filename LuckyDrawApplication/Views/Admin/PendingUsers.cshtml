@model IEnumerable<LuckyDrawApplication.Models.User>

@{
    ViewBag.Title = "Pending Purchasers List";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<!-- Site wrapper -->
<div class="wrapper">

    @Html.Partial("_AdminLayout")

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1 style="margin: 20px;">Pending Purchasers List</h1>
            <ol class="breadcrumb">
                <li><a href="~/Admin/Index"><i class="fa fa-dashboard"></i>Dashboard</a></li>
                <li class="active">Pending Purchasers List</li>
            </ol>

        </section>
        
        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="box box-primary">

                <h4 style="margin-top: 50px; font-weight:bold; text-align:center">Pending Purchasers List</h4>

                <div class="box-body">
                    <div class="container-fluid">

                        <div class="row">

                            <table id="usersTable" class="table table-striped table-bordered">

                                <thead>
                                    <tr>
                                        <th>
                                            ID
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ICNumber)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ProjectName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Unit)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.SalesConsultant)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DateTime)
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PurchaserID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ICNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProjectName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Unit)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SalesConsultant)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateTime)
                                        </td>
                                        <td>
                                            <a target="_blank" href='@Url.Action("MainLuckyDrawAnimationDeleteSkip", "Admin", new { new_id = item.PurchaserID })' class="btn btn-xs btn-success">Spin Wheel</a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>

                        </div>

                    </div>
                </div>
            </div>

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    @Html.Partial("_Footer")

</div>

<script src="~/admin-lte/js/adminlte.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>


<!-- #endregion -->
<script>
    $(document).ready(function () {
        $('#pendingpurchasers').addClass("active");
        var table = $('#usersTable').DataTable({
            responsive: true,
            "order": [[0, "desc"]]
        });
    });
</script>
